@model IEnumerable<SinericTask.Models.Shop>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<asp:TreeView ID="TreeView1" runat="server">
    <Nodes>
        <asp:TreeNode Text="Products">
            <asp:TreeNode Text="Hardware" />
            <asp:TreeNode Text="Software" />
        </asp:TreeNode>
        <asp:TreeNode Text="Services" />
    </Nodes>
</asp:TreeView>




<form method="post" action="Create.cshtml">
    <div style="padding-top:6px">
        @Html.ActionLink("Create New", "Create", new { @class = "btn btn-primary btn-sm" })
    </div>
</form>



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ParentId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.ParentId)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }


</table>


